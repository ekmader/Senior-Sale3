rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Items: Users can read items from their university, write their own
    match /items/{itemId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        resource.data.universityId;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.sellerId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        request.resource.data.universityId;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.sellerId;
    }

    // Messages: Only between users of same university
    match /messages/{messageId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        get(/databases/$(database)/documents/users/$(request.resource.data.fromUserId)).data.universityId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        get(/databases/$(database)/documents/users/$(request.resource.data.toUserId)).data.universityId;
    }

    // Groups: Similar rules
    match /groups/{groupId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        resource.data.universityId &&
        request.auth.uid in resource.data.members;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.universityId ==
        request.resource.data.universityId;
    }
  }
}